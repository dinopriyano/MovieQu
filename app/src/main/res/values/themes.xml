<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieQu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_dark</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/primary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RubikTextViewStyle</item>
        <item name="android:buttonStyle">@style/RubikButtonStyle</item>
        <item name="android:windowBackground">@color/secondary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="RubikTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="RubikButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>
</resources>